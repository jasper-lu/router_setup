#!/bin/sh

read -p "Enter in the port you are using (MAKE SURE YOU HAVE THE RIGHT ONE): " port
read -p "You entered: $input_variable (Y/N)" yn
case $yn in
    [Yy] ) perl -pi -e "s/19999/$port/" ssh_tunnel;;
    [Nn] ) echo "This script will now restart"; ./edit_tun exit;;
    *) echo "Please answer yes or no." ;;
esac

echo "the ssh tunnel code has been changed. This is the code:"
cat ssh_tunnel

read -p "Is it correct? (Y/N)"

case $yn in
    [Yy] ) echo "Moving on to the next step..." ;;
    [Nn] ) echo "Please correct any mistakes"; vi ssh_tunnel ;;
    *) echo "Please answer yes or no. " ;;
esac

rm edit_tun
